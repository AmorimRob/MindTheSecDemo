<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="MindTheSecDemo.Views.MainPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Margin="20"
                       FontAttributes="Bold"
                       Text="OFUSCAÇÃO DE STRING" />
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Entry Grid.Row="0"
                           Grid.Column="0"
                           WidthRequest="200"
                           Text="{Binding Texto}" />

                    <Entry Grid.Row="1"
                           Grid.Column="0"
                           WidthRequest="200"
                           Text="{Binding TextoOfuscado, Mode=TwoWay}" />
                    <Button Grid.Row="1"
                            Grid.Column="1"
                            FontSize="Micro"
                            Command="{Binding OfuscarTextoCommand}"
                            Text="Ofuscar Texto" />

                    <Entry Grid.Row="2"
                           Grid.Column="0"
                           WidthRequest="200"
                           Text="{Binding TextoTransformado}" />
                    <Button Grid.Row="2"
                            Grid.Column="1"
                            FontSize="Micro"
                            Command="{Binding ObterTextoCommand}"
                            Text="Obter Texto" />
                </Grid>
                <Label Margin="20"
                       FontAttributes="Bold"
                       Text="SECURE STORAGE" />
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Entry Grid.Row="0"
                           Grid.Column="0"
                           WidthRequest="100"
                           Text="{Binding TextoParaSalvarNoSecureStorage, Mode=TwoWay}" />
                    <Button Grid.Row="0"
                            Grid.Column="1"
                            FontSize="Micro"
                            Command="{Binding SalvarSecureStorageCommand}"
                            Text="Salvar Secure Storage" />

                    <Label Grid.Row="1"
                           Grid.Column="0"
                           WidthRequest="100"
                           Text="{Binding TextoRecuperadoDoSecureStorage}" />
                    <Button Grid.Row="1"
                            Grid.Column="1"
                            Command="{Binding ObterSecureStorageCommand}"
                            FontSize="Micro"
                            Text="Obter Secure Storage" />

                </Grid>
                <Button Margin="20"
                        Command="{Binding NavegarPokemonsPageCommand}"
                        Text="Pokemons" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
