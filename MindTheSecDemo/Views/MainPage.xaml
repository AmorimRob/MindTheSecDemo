<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="MindTheSecDemo.Views.MainPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="POKEMÓNS!"
                   FontSize="Large"
                   FontAttributes="Bold"
                   Margin="20"
                   HorizontalTextAlignment="Center" />
            <ListView ItemsSource="{Binding Pokemons}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Name}"
                                       Margin="20"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
